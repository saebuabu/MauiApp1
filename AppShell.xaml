<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    xmlns:local1="clr-namespace:MauiApp1.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.BackgroundColor="Blue"
    Shell.TitleColor="white"
    Title="MauiApp1">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Cryptocoin Page"
        FlyoutIcon="floki.webp"
        ContentTemplate="{DataTemplate local1:CryptoCoinPage}"
        Route="CryptoCoin" />
    <ShellContent
        Title="Bitcoin Page"
        FlyoutIcon="bitcoin.png"
        ContentTemplate="{DataTemplate local1:BitcoinPage}"
        Route="Bitcoin" />

</Shell>
